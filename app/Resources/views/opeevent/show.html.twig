<table class="table">
    <tbody>
        <tr>
            <th>Title</th>
            <td>{{ oPEEvent.title }}</td>
        </tr>
        <tr>
            <th>CE hours</th>
            <td>{{ oPEEvent.ceHours }}</td>
        </tr>
        <tr>
            <th>Dates</th>
            <td>{% if oPEEvent.dates %}{{ oPEEvent.dates|join(', ') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Attendees</th>
            <td>
              <ul>
                {% for attendee in oPEEvent.attendees %}
                  <li>{{ attendee.getFullName() }}<li>
                {% endfor %}
              </ul>
            </td>
        </tr>
    </tbody>
</table>
