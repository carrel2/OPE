{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="title">Attendees list</h1>

    <table class="table is-hoverable">
        <thead>
            <tr>
                <th>First name</th>
                <th>Initial</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for attendee in attendees %}
            <tr>
                <td>{{ attendee.firstname }}</td>
                <td>{{ attendee.middleinitial }}</td>
                <td>{{ attendee.lastname }}</td>
                <td>{{ attendee.email }}</td>
                <td>{{ attendee.phonenumber }}</td>
                <td>
                    <a class="button" href="{{ path('attendee_show', { 'id': attendee.id }) }}">show</a>
                    <a class="button" href="{{ path('attendee_edit', { 'id': attendee.id }) }}">edit</a>
                    <a class="button" href="{{ path('attendee_report', { 'id': attendee.id }) }}">generate report</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="button" href="{{ path('attendee_new') }}">Create a new attendee</a>
        </li>
    </ul>
{% endblock %}
