<table class="table">
    <tbody>
        <tr>
            <th>First name</th>
            <td>{{ attendee.firstname }}</td>
        </tr>
        <tr>
            <th>Initial</th>
            <td>{{ attendee.middleinitial }}</td>
        </tr>
        <tr>
            <th>Last name</th>
            <td>{{ attendee.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ attendee.email }}</td>
        </tr>
        <tr>
            <th>Phone number</th>
            <td>{{ attendee.phonenumber }}</td>
        </tr>
        <tr>
            <th>Events</th>
            <td>
              <ul>
                {% for event in attendee.opeEvents %}
                  <li>{{ event.title }}<li>
                {% endfor %}
              </ul>
            </td>
        </tr>
    </tbody>
</table>
